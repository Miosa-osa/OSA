#!/bin/sh

# OSA release environment â€” runs before every release command.
# Creates ~/.osa/ on first run, disables Erlang distribution (standalone binary).

export OSA_HOME="${OSA_HOME:-$HOME/.osa}"
export RELEASE_DISTRIBUTION=none
export RELEASE_COOKIE=osa_standalone

# Ensure data directory exists
mkdir -p "$OSA_HOME"
mkdir -p "$OSA_HOME/sessions"
mkdir -p "$OSA_HOME/data"
mkdir -p "$OSA_HOME/skills"
