  "memoryArchitecture": {
    "description": "Three-tier memory system based on Synapse research",
    "tiers": {
      "working": {
        "type": "redis",
        "ttl": "15 minutes",
        "maxTokens": 25000,
        "purpose": "Current conversation context"
      },
      "episodic": {
        "type": "postgresql+pgvector",
        "ttl": "30 days",
        "purpose": "Full interaction traces with embeddings"
      },
      "semantic": {
        "type": "knowledge-graph",
        "ttl": "permanent",
        "purpose": "Consolidated facts and patterns"
      }
    },
    "consolidation": {
      "strategy": "Mem0",
      "operations": [
        "ADD",
        "UPDATE",
        "DELETE",
        "NOOP"
      ],
      "trigger": "after-task or periodic-5-interactions",
      "deduplication": "embedding-similarity-0.85"
    },
    "retrieval": {
      "strategy": "spreading-activation",
      "similarityThreshold": 0.75,
      "temporalDecay": true,
      "maxResults": 10
    }
  },
